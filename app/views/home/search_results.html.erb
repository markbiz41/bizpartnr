<% if @user_search %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Full Name</th>
        <th>Email </th>
        <th>Industry</th>
        <th>Position</th>
        <th>City</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @results.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td><%= user.industry %></td>
          <td><%= user.position %></td>
          <td><%= user.city %></td>

          <td><%= link_to 'Show', user %></td>
          </tr>
      <% end %>
    </tbody>
  </table>

<% elsif @opportunity_search %>
  <%= render 'opportunities/list', opportunities: @results %>
<% end %>
