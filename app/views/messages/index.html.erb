
<h1>Received Messages</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th width="40%">Content</th>
      <th width="40%">Sender</th>
      <th colspan="2" width="20%"></th>
    </tr>
  </thead>

  <tbody>
    <% @received.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.sender.full_name %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h1>Sent Messages</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th width='40%'>Content</th>
      <th width='40%'>Receiver</th>
      <th colspan="2" width='20%'></th>
    </tr>
  </thead>

  <tbody>
    <% @sent.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.receiver.full_name %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


