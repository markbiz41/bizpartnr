<div class='row'>
  <div class='col-md-6'>
    <h1>Edit Profile </h1>
    <%= simple_form_for @user  do |f| %>

          <%= f.input :full_name %>
          <%= f.input :email %>
          <%= f.input :avatar, as: :file, label: 'Photo' %>
          <%= f.input :city %>
          <%= f.input :state %>
          <div class="row">
              <div class="col-xs-6">
              <%= f.association :industry, collection:  Industry.all.order('lower(name) ASC'), input_html: {class: 'col-xs-2'} %>
            </div>
          </div>

          <%= f.input :position %>
          <%= f.input :contact_info, as: :text %>

          <%= f.submit %>
    <% end %>

  </div>
</div>
