<div class='row'>
  <div class='col-md-6'>
    <h1><%= @user.full_name %> Profile </h1>

    <table class="table">
      <tr>
        <td><strong>Full Name</strong></td>
        <td><%= @user.full_name %></td>
      </tr>
      <tr>
        <td ><strong>Email</strong></td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td ><strong>City</strong></td>
        <td><%= @user.city %></td>
      </tr>
      <tr>
        <td ><strong>Industry</strong></td>
        <td><%= @user.industry %></td>
      </tr>
      <tr>
        <td ><strong>Position</strong></td>
        <td><%= @user.position %></td>
      </tr>
      <tr>
        <td ><strong>Contact Info</strong></td>
        <td><%= @user.contact_info %></td>
      </tr>
    </table>
  </div>
  <div class='col-md-6'>
    <%= link_to 'Edit Profile', edit_user_path(@user) if @owner %>

    <h1>Opportunities</h1>

    <ul>
      <% @opportunities.each do |op| %>

        <li class="">
          <b>Partnership Opportunity:</b> <%=op.partnership_opportunity %> <br />
          <b>Expertise Desired:</b> <%=op.expertise_desired %> <br />
          <b>Industry:  </b> <%=op.industry.name %> <br />
          <b>Compensation:</b>   <%=op.compensation %> <br />
          <%= link_to 'Details', op %>
        </li>
      <% end %>

    </ul>

  </div>

</div>
